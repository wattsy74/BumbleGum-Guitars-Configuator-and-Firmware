* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(to bottom, #2a1f1a, #1a120e);
  color: #fff;
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.viewport {
  width: 1000px;
  height: 600px;
  display: flex;
  flex-direction: column;
  margin: auto;
  background: #222;
}

.header,
.footer {
  background: #444;
  padding: 10px;
  text-align: center;
  font-weight: bold;
  height: 50px;
  flex-shrink: 0;
  display: flex;

.no-devices-btn {
  background: #e74c3c;
  color: #fff;
  border: none;
  border-radius: 999px;
  font-weight: bold;
  font-size: 16px;
  padding: 8px 24px;
  margin: 0 auto;
  box-shadow: none;
  transition: background 0.2s;
}
  align-items: center;
  justify-content: center;
}

/* ===== AUTOMATIC FIRMWARE UPDATE STYLES ===== */
.update-notification {
  position: fixed;
  top: 10px;
  right: 10px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 2px solid #fff;
  border-radius: 12px;
  padding: 16px;
  max-width: 320px;
  max-height: 580px; /* Ensure it fits within viewport */
  overflow-y: auto;
  z-index: 10000;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  animation: slideInRight 0.5s ease-out;
}

.update-notification.success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.update-notification.error {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
}

.update-content h3 {
  margin: 0 0 12px 0;
  font-size: 16px;
  font-weight: bold;
}

.update-content p {
  margin: 6px 0;
  font-size: 13px;
  line-height: 1.3;
}

.update-buttons {
  display: flex;
  gap: 8px;
  margin-top: 12px;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.update-buttons button {
  padding: 6px 12px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
  font-size: 12px;
  transition: all 0.2s;
}

.btn-primary {
  background: #fff;
  color: #333;
}

.btn-primary:hover {
  background: #f0f0f0;
  transform: translateY(-1px);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-1px);
}

.update-progress-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
}

.progress-content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30px;
  border-radius: 12px;
  text-align: center;
  min-width: 400px;
  box-shadow: 0 16px 64px rgba(0, 0, 0, 0.5);
}

.progress-content h3 {
  margin: 0 0 20px 0;
  font-size: 20px;
}

.progress-bar {
  width: 100%;
  height: 20px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  overflow: hidden;
  margin: 15px 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  width: 0%;
  transition: width 0.3s ease;
  border-radius: 10px;
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.main {
  flex: 1;
  display: flex;
  flex-direction: row;
  gap: 10px;
  padding: 10px;
}

.left-panel {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 10px;
  background: #333;
  padding: 10px;
}

.picker-panel {
  flex: 1;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background: #333;
  padding: 10px;
}

.picker-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  overflow: visible;
}

#picker-root {
  width: 100%;
  max-width: 220px;
}

.preset-dropdown {
  margin-top: 16px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.preset-dropdown label {
  margin-bottom: 4px;
  font-weight: bold;
}

#preset-select {
  padding: 6px 12px;
  border-radius: 4px;
  font-size: 14px;
}


/* Toggle buttons */
.fret-toggle,
.strum-toggle {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  padding: 10px;
}

select {
  background-color: #222;         /* Match toggle buttons */
  color: #fff;
  border: 1px solid #ffcc00;         /* Subtle outline */
  padding: 8px 16px;
  border-radius: 999px;           /* Pill shape */
  font-size: 16px;
  font-family: inherit;
  cursor: pointer;
  min-width: 180px;
  box-shadow: 0 0 4px rgba(0, 255, 204, 0.2); /* Gentle glow */
  transition: box-shadow 0.2s ease;
}

/* Focus state with brighter edge */
select:focus {
  outline: none;
  box-shadow: 0 0 6px rgba(0, 255, 204, 0.4);
}

/* Disabled top row */
select option:disabled {
  color: #888;
  font-style: italic;
}

.dropdown-wrapper {
  display: flex;
  flex-direction: column; /* ðŸ”„ Stack children vertically */
  align-items: flex-start; /* Align left for dropdowns and button */
}

.preset-dropdown {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;

  background-color: #222;
  color: #fff;
  border: 1px solid #444;
  padding: 8px 16px;
  border-radius: 999px;
  font-size: 16px;
  font-family: 'Segoe UI', sans-serif;
  height: 42px;
  min-width: 200px;
  box-shadow: 0 0 4px rgba(0, 255, 204, 0.2);
  transition: box-shadow 0.2s ease;
  line-height: 1.4;
}

.preset-dropdown:focus {
  outline: none;
  box-shadow: 0 0 6px rgba(0, 255, 204, 0.4);
}

.preset-dropdown option:disabled {
  color: #888;
  font-style: italic;
}

.fret-toggle-button,
.strum-toggle-button {
  background-color: #222;
  color: #ccc;
  border: 2px solid #444;
  border-radius: 999px;
  padding: 8px 20px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.05);
}

.fret-toggle-button.selected,
.strum-toggle-button.selected {
  box-shadow: 0 0 8px 2px #ffcc00;
  border-color: #ffcc00;
  color: #fff;
}

/* Fret and strum areas */
.fret-area,
.strum-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

.fret-set,
.strum-set {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 10px;
}

/* Fret buttons */
.fret-button {
  width: 60px;
  height: 80px;
  border: none;
  border-radius: 30px 30px 10px 10px;
  font-weight: bold;
  color: #fff;
  font-size: 0.9em;
  cursor: pointer;
  background-color: #555;
  box-shadow: 0 2px 6px rgba(0,0,0,0.4);
  transition: transform 0.1s ease;
}

.fret-button:hover {
  transform: scale(1.05);
}

.fret-button.green   { background-color: #2ecc40; }
.fret-button.red     { background-color: #ff4136; }
.fret-button.yellow  { background-color: #ffdc00; color: #000; }
.fret-button.blue    { background-color: #0074d9; }
.fret-button.orange  { background-color: #ff851b; }

/* Strum buttons */
.strum-button {
  width: 100px;
  height: 50px;
  border: none;
  border-radius: 999px;
  font-weight: bold;
  font-size: 1em;
  color: #fff;
  background-color: #666;
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0,0,0,0.4);
  transition: transform 0.1s ease;
}

.strum-button:hover {
  transform: scale(1.05);
}
.strum-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 4px;
}

.strum-label {
  margin-top: 6px;
  font-size: 13px;
  font-weight: bold;
  color: white;
  text-shadow: 1px 1px 2px #000;
  letter-spacing: 0.5px;
}


/* Glowing selected button */
.fret-button.selected,
.strum-button.selected {
  outline: none;
  box-shadow:
    0 0 0 2px #ffcc00,
    0 0 12px 4px #ffcc00;
  z-index: 1;
}

