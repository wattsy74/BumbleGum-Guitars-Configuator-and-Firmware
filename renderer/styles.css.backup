/* ===== TOAST NOTIFICATION STYLES ===== */
.toast {
  position: fixed !important;
  top: 20px !important;
  right: 20px !important;
  background: #333 !important;
  color: white !important;
  padding: 12px 16px !important;
  border-radius: 4px !important;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3) !important;
  z-index: 9999 !important;
  opacity: 0;
  transform: translateX(100%);
  transition: all 0.3s ease !important;
  max-width: 300px !important;
  border-left: 4px solid #2ecc40 !important;
  font-size: 14px !important;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif !important;
}

.toast.show {
  opacity: 1;
  transform: translateX(0);
}

.toast.error {
  border-left-color: #e74c3c;
  background: #2c1a1a;
}

.toast.warning {
  border-left-color: #f39c12;
  background: #2c2a1a;
}

.toast.success {
  border-left-color: #2ecc40;
  background: #1a2c1a;
}

.toast.info {
  border-left-color: #3498db;
  background: #1a1a2c;
}

/* Button Config Modal Styles */
#button-config-table {
  border: 1px solid #444;
}

#button-config-table th {
  background: #333 !important;
  color: #ffe066 !important;
  font-weight: bold;
}

#button-config-table td {
  background: #2a2a2a;
}

#button-config-table tr:hover td {
  background: #333;
}

/* Enhanced tooltip styling for button config */
[title] {
  position: relative;
  cursor: help;
}

/* Custom tooltip for better visibility */
.tooltip-cell {
  position: relative;
}

.tooltip-cell:hover::after {
  content: attr(title);
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.95);
  color: #fff;
  padding: 8px 12px;
  border-radius: 6px;
  font-size: 12px;
  white-space: nowrap;
  z-index: 1000;
  border: 1px solid #ffe066;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.tooltip-cell:hover::before {
  content: '';
  position: absolute;
  bottom: 92%;
  left: 50%;
  transform: translateX(-50%);
  border: 5px solid transparent;
  border-top-color: #ffe066;
  z-index: 1001;
}

/* Update Notification Styles */
.update-notification {
  position: fixed;
  top: 20px;
  right: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  z-index: 10000;
  max-width: 400px;
  animation: slideInRight 0.3s ease-out;
}

.update-notification.success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.update-notification.warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.update-notification.error {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #333;
}

.update-content h3 {
  margin: 0 0 12px 0;
  font-size: 1.2em;
  font-weight: 600;
}

.update-content p {
  margin: 8px 0;
  font-size: 0.9em;
  line-height: 1.4;
}

.update-buttons {
  margin-top: 16px;
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.btn-primary, .btn-secondary {
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
  font-size: 0.85em;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-primary {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.btn-primary:hover {
  background: rgba(255, 255, 255, 1);
  transform: translateY(-1px);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.3);
}

.update-progress-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
}

.progress-content {
  background: #333;
  color: #fff;
  border-radius: 12px;
  padding: 30px;
  max-width: 400px;
  text-align: center;
}

.progress-content h3 {
  margin: 0 0 16px 0;
  font-size: 1.3em;
}

.progress-content p {
  margin: 8px 0;
  font-size: 0.95em;
  color: #ccc;
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
